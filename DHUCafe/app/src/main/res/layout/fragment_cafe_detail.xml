<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="edu.rosehulman.trigon.dhucafe.CafeDetail">


    <ImageView
        android:id="@+id/dimage"
        android:src="@drawable/coffee_loading"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/title"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/hello_blank_fragment" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cafeprice"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/title"/>

    <TextView
        android:layout_below="@id/cafeprice"
        android:id="@+id/cafedetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="testtest\ntest\ntest\n"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />



</RelativeLayout>
